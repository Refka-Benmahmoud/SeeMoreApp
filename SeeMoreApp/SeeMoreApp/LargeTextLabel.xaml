<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeeMoreApp.LargeTextLabel"
              xmlns:local="clr-namespace:SeeMoreApp" Padding="0,10,0,0">

    <ContentView.Content>
        <StackLayout
            Orientation="Vertical">
            <Label
                BackgroundColor="Beige" HeightRequest="50"
                x:Name="SmallLabel" IsVisible="true"/>
            <Label
                BackgroundColor="BurlyWood" HeightRequest="200" 
                x:Name="FullLabel" IsVisible="false"/>
            <Button
                Text="See More" Clicked="ExpandContractButton_Clicked"
                x:Name="ExpandContractButton" />
        </StackLayout>
    </ContentView.Content>
</ContentView>